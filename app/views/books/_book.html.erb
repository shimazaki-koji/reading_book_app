<div class="card">
  <%= link_to image_tag(book.image, class: :card__img), book_path(book.id) %>
  <div class="card__body">
    <%= link_to book.title, book_path(book.id), class: :card__title %>
    <%= link_to book.writer, book_path(book.id), class: :card__title %>
    <%= link_to "by #{book.user.nickname}",  user_path(book.user), class: :card__user %>
  </div>
</div>