<div class="contents row">
  <div class="content_post" style="background-image: url(<%= @book.image %>);">
    <% if user_signed_in? && current_user.id == @book.user_id %>
      <div class="more">
        <span><%= image_tag book.image, class: 'book-image' if message.image.attached? %></span>
        <ul class="more_list">
          <li>
            <%= link_to '編集', edit_tweet_path(@tweet.id), method: :get %>
          </li>
          <li>
            <%= link_to '削除', book_path(@tweet.id), method: :delete %>
          </li>
        </ul>
      </div>
    <% end %>
    <p><%= @book.text %></p>
    <span class="name">
      <a href="/users/<%= @book.uesr.nickname %>">
      </a>
    </span>
  </div>
  <div class="container">
    <% if user_signed_in? %>
      <%= form_with(model: [@book, @comment], local: true) do |form| %>
        <%= form.text_area :text, placeholder: "コメントする", rows: "2" %>
        <%= form.submit "SEND" %>
      <% end %>
    <% else %>
      <strong><p>※※※ コメントの投稿には新規登録/ログインが必要です ※※※</p></strong>
    <% end %>
  </div>
</div>