<%= form_with(model: book, local: true) do |form| %>
  <%= form.text_field :title, placeholder: "本のタイトル(Booktitle)" %>
  <%= form.text_field :image, placeholder: "Image" %>
  <%= form.text_area :text, placeholder: "本から学びたいこと(learn)", rows: "10" %>
  <%= form.text_area :text, placeholder: "本の種別(content)", rows: "10" %>
  <%= form.submit "SEND" %>
<% end %>