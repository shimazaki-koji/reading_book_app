<div class="contents row">
  <div class="container">
    <h3>投稿する</h3>
    <%= form_with(model: @book, local: true) do |form| %>
      <%= form.text_field :title, placeholder: "BookTitle" %>
      <%= form.text_field :image, placeholder: "Image Url" %>
      <%= form.text_area :text, placeholder: "本から学びたいこと", rows: "10" %>
      <%= form.text_area :text, placeholder: "本の種別", rows: "10" %>
      <%= form.submit "SEND" %>
    <% end %>
  </div>
</div>