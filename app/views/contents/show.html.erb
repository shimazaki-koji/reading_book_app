<main class="main">
  <div class="book__wrapper">
    <div class="book__body">
      <div class="contents__detail">
        <div class="book__inner">
          <p class="detail__message">書き抜き</p>
            <div class="content__inner">
              <p class="detail__message">
                <%= @content.write_down %>
              </p>
            </div>
        </div>
      </div>
      <div class="contents__detail">
        <div class="book__inner">
          <p class="detail__message">要約</p>
            <div class="content__inner">
              <p class="detail__message">
                <%= @content.wrap_up %>
              </p>
            </div>
          </div>
        </div>
      <div class="contents__detail">
        <div class="book__inner">
          <p class="detail__message">コメント・アクションプラン</p>
          <div class="content__inner">
            <p class="detail__message">
              <%= @content.action_plan %>
            </p>
          </div>
        </div>
      </div>
    <%# 本の投稿者とログインしているユーザーが同じであれば以下を表示する %>
    <%# if user_signed_in? && current_user.id #== @contents_id%>
      <%#div class="book__manage">
        <%= link_to "編集する", edit_book_content_path(@content.id), class: :book__btn %>
        <%#= link_to "削除する", book_content_path(@content.id), method: :delete, class: :book__btn %>
      <%#/div>
    <% end %>
    <%#div class="container">
      <% if user_signed_in? %>
        <%#= form_with(model: [@content, @comment], local: true) do |form| %>
          <%#= form.text_area :text, placeholder: "コメントする", rows: "2" %>
          <%#= form.submit "SEND" %>
        <%# end %>
      <%# else %>
        <%#strong><p>※※※ コメントの投稿には新規登録/ログインが必要です ※※※</p></strong>
      <% end %>
      <%#div class="comments">
        <h4>＜コメント一覧＞</h4>
        <% @comments.each do |comment| %>
          <%#p>
            <strong><%= link_to comment.user.nickname, "/users/#{comment.user_id}" %><%#/strong>
            <%#= comment.text %>
          <%#/p>
        <% end %>
      </div>
    </div>
  </div>
</main>