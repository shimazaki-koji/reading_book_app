<main class="main">
  <div class="inner">
    <div class="book__wrapper">
      <div class="book__body">
        <div class="book__detail">
          <p class="detail__message">書き抜き</p>
          <p class="detail__message">
            <%= @content.write_down %>
          </p>
        </div>
        <div class="book__detail">
          <p class="detail__message">要約</p>
          <p class="detail__message">
            <%= @content.wrap_up %>
          </p>
        </div>
        <div class="book__detail">
          <p class="detail__message">アクションプラン</p>
          <p class="detail__message">
            <%= @content.action_plan %>
          </p>
        </div>
      </div>
      <%# 本の投稿者とログインしているユーザーが同じであれば以下を表示する %>
      <% if user_signed_in? && current_user.id == @content.user_id%>
        <div class="book__manage">
          <%= link_to "編集する", edit_book_content_path(@content.id), class: :book__btn %>
          <%= link_to "削除する", book_content_path(@content.id), method: :delete, class: :book__btn %>
        </div>
      <% end %>
      <%# // 本の投稿者とログインしているユーザーが同じであれば上記を表示する %>
      <div class="book__comments">
        <%# ログインしているユーザーには以下のコメント投稿フォームを表示する %>
        <% if user_signed_in? %>
          <%= form_with model: @content, local: true do |f|%>
            <div class="field">
              <%= f.label :text, "コメント" %><br />
              <%= f.text_field :text %>
            </div>
            <div class="actions">
              <%= f.submit "送信する", class: :form__btn %>
            </div>
          <% end %>
        <% end %>
        <%# // ログインしているユーザーには上記を表示する %>
        <ul class="comments_lists">
          <%# 投稿に紐づくコメントを一覧する処理を記述する %>
          <% @comments.each do |comment| %>
            <li class="comments_list">
              <p>
                <%= comment.text %>
                <%= link_to @book.user.name, user_path(comment.user), class: :comment_user %>
              </p>
            </li>
          <% end %>
          <%# // 投稿に紐づくコメントを一覧する処理を記述する %>
        </ul>
      </div>
    </div>
  </div>
</main>